{
  "name": "cocov",
  "version": "2.0.0",
  "description": "Code coverage intelligence engine & regression guard. Visualizes velocity, trends, and enforces quality gates.",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "cocov": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "cocov": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "coverage",
    "regression",
    "test",
    "dashboard",
    "chart",
    "quality-gate",
    "ci-cd",
    "history",
    "trends"
  ],
  "author": "Antigravity",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lguibr/cocov.git"
  },
  "bugs": {
    "url": "https://github.com/lguibr/cocov/issues"
  },
  "homepage": "https://github.com/lguibr/cocov#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^1.1.0"
  }
}
